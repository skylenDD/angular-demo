<%- include('header') -%>
    <%- include('nav') -%>

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            <!-- Content Header (Page header) -->


            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <section class="panel">
                            <header class="panel-heading">
                                添加文章
                            </header>
                            <div class="panel-body">
                                <form class="form-horizontal tasi-form" method="post">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">标题</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="title" value="<%= art.title%>" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">推荐属性</label>
                                        <div class="col-sm-10">
                                            <div class="checkbox">
                                                <% 
                                                var ischecked = "";
                                                for(var i = 0;i < art.attribute.length;i++) {
                                                    if(art.attribute[i] == "h"){
                                                        ischecked = "checked";
                                                    }
                                                    %>

                                                    <% } %>

                                                        <label>
                                                            <input type="checkbox" <%=ischecked %> name="attribute" value="h">[H:热点信息]</label>
                                                        <% 
                                                            var ischecked2 = "";
                                                            for(var i = 0;i < art.attribute.length;i++) {
                                                                if(art.attribute[i] == "p"){
                                                                    ischecked2 = "checked";
                                                                }
                                                                %>

                                                            <% } %>

                                                                <label>
                                                                    <input type="checkbox" <%=ischecked2 %> name="attribute" value="p">[H:热点信息]
                                                                </label>
                                                                <% 
                                                var ischecked3 = "";
                                                for(var i = 0;i < art.attribute.length;i++) {
                                                    if(art.attribute[i] == "r"){
                                                        ischecked3 = "checked";
                                                    }
                                                    %>

                                                                    <% } %>

                                                                        <label>
                                                                            <input type="checkbox" <%=ischecked3 %> name="attribute" value="r">[H:热点信息]
                                                                        </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">作者</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="author" value="<%= art.author%>" class="form-control round-input">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">分类</label>
                                        <div class="col-sm-10">
                                            <select name="type" class="form-control input-sm">
                                                <!-- 自定义一个格式：-1表示用户没有选择文章类型-->
                                                <option value="-1">请选择文章类型</option>
                                                <% for(var i = 0; i< artType.length; i++) { 
                                                    if (artType[i].id == art.type) {%>
                                                    <option value="<%= artType[i].id %>" selected="selected">
                                                        <%= artType[i].typename %>
                                                    </option>
                                                    <% } else { %>
                                                        <option value="<%= artType[i].id %>">
                                                            <%= artType[i].typename %>
                                                        </option>
                                                        <%}
                                                    }%>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">阅读人数</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" value="<%= art.read%>" name="read" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">点赞</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" value="<%= art.support%>" name="support" type="text" placeholder="可不填">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">tag标签</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="tag" value="<%= art.tag%>" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">文章内容</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" name="content" rows="10"><%= art.content%></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button type="submit" class="btn btn-danger">提交</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>

            </section>
            <!-- /.content -->

            <div class="footer-main">
                Copyright &copy 模板, 2014
            </div>
        </aside>
        <!-- /.right-side -->

        <%- include('footer') -%>